---
import Layout from '../layouts/Layout.astro'
import Header from '../components/Header.astro'
---

<Layout title='Welcome to Astro.'>
	<main>
		<aside>as</aside>
		<article>
			<div>
				<Header />
			</div>
		</article>
		<footer>foo</footer>
		<section>sect</section>
	</main>
</Layout>

<style>
	main {
		height: 100vh;
		color: light-dark(black, white);
		display: grid;
		grid-template-areas:
			'aside article'
			'footer footer'
			'section section';
		grid-template-columns: 250px 1fr;
		grid-template-rows: 1fr auto;
	}

	main > * {
		border: 1px solid white;
	}
	aside {
		grid-area: aside;
	}
	article {
		grid-area: article;
	}
	footer {
		grid-area: footer;
	}
	section {
		grid-area: section;
	}
</style>
