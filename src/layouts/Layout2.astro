---
import Layout from '../layouts/Layout.astro'
import Header from '../components/Header.astro'
import AsideMenu from '../components/AsideMenu.astro'

interface Props {
	title: string
}
const { title } = Astro.props
---

<Layout title={title}>
	<main>
		<aside><div><AsideMenu /></div></aside>
		<article>
			<div>
				<Header />
			</div>
			<div>
				<slot />
			</div>
		</article>
		<footer>foo</footer>
		<section>sect</section>
	</main>
</Layout>

<style>
	main {
		height: 100vh;
		color: light-dark(black, white);
		display: grid;
		grid-template-areas:
			'aside article'
			'footer footer'
			'section section';
		grid-template-columns: 250px 1fr;
		grid-template-rows: 1fr auto;
	}

	main > * {
		border: 1px solid white;
	}
	aside {
		grid-area: aside;
	}
	article {
		background-color: var(--background-article);
		grid-area: article;
		overflow-y: hidden;
	}
	footer {
		grid-area: footer;
	}
	section {
		grid-area: section;
	}
</style>
