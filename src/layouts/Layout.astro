---
interface Props {
	title: string
}

const { title } = Astro.props
---

<html lang='es'>
	<head>
		<meta charset='UTF-8' />
		<meta
			name='description'
			content='Astro description'
		/>
		<meta
			name='viewport'
			content='width=device-width'
		/>
		<link
			rel='icon'
			type='image/svg+xml'
			href='/favicon.svg'
		/>
		<meta
			name='generator'
			content={Astro.generator}
		/>
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>

	<style is:global>
		:root {
			--auxiliar1: rgb(223, 172, 18);
			--auxiliar2: rgb(0, 129, 74);
		}
		html {
			font-family: system-ui, sans-serif;
			color-scheme: light dark;
		}
		body {
			box-sizing: border-box;
			margin: 0;
			padding: 0;
			background-color: light-dark(rgb(222, 222, 222), rgb(22, 22, 22));
		}
		h1 {
			margin: 0;
			padding: 0;
		}
		@font-face {
			font-family: 'RELOJ';
			src: url('/fonts/RELOJ.woff') format('woff');
		}
		@font-face {
			font-family: 'DEMI';
			src: url('/fonts/DEMI.woff') format('woff');
		}
	</style>
</html>
